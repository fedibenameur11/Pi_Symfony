{% extends 'base2.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
    <h1>Categorie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ categorie.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ categorie.nom }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img style="max-width: 20%; height: auto;" src="{{ asset('uploads/categorie/'~ categorie.imageC) }}" alt="Image"></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_categorie_index') }}">
    <button class="btn btn-success m-2 " type= "button">Revenir en arriere</button></a>

    <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}">
    <button class="btn btn-light m-2  " type= "button">Modifier</button></a>
    {{ include('categorie/_delete_form.html.twig') }}
{% endblock %}
