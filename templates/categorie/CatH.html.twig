{% extends 'base1_1.html.twig' %}

{% block title %}Categorie index
{% endblock %}

{% block body %}
 <!--? Hero Start -->
        <div class="slider-area2">
            <div class="slider-height2 d-flex align-items-center">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="hero-cap hero-cap2 text-center pt-70">
                                <h2>Nos categories</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Hero End -->
        <!--? Services Area Start -->
        <section class="services-area pt-100 pb-150">
            <!--? Want To work -->
            <section class="wantToWork-area w-padding">
                <div class="container">
                    <div class="row align-items-end justify-content-between">
                        <div class="col-lg-6 col-md-10 col-sm-10">
                            <div class="section-tittle">
                                <span>A votre service 24h/7j</span>
                                <h2>Repoussez vos limites au maximum pour atteindre vos objectifis</h2>
                            </div>
                        </div>
                        {#<div class="col-xl-2 col-lg-2 col-md-3">
                            <a href="services.html" class="btn wantToWork-btn f-right">More Services</a>
                        </div>#}
                    </div>
                </div>
            </section>
            <!-- Want To work End -->
            <div class="container">
                <div class="row">
                    {% for cat in categories %}
                    <div class="col-lg-4 col-md-6 col-sm-6">
                        <div class="single-team mb-30 single-cat single-cat2 text-center mb-50">
                            <div class="team-img">
                              <img style="max-width: 100%; height: auto;" src="{{ asset('uploads/categorie/' ~ cat.getImageC()) }}" alt="image">
                                {#<div class="team-caption">
                                    <span>Creative derector</span>
                                    <h2><a href="#">Jhon Sunsaev</a></h2>
                                </div>#}
                            </div>
                            <div class="cat-cap">
                                <h5><a>{{ cat.nom }}</a></h5>
                                <p>Consulter nos produits</p>
                            </div>
                            <div class="img-cap">
                                <a href="{{ path('categorie_show_p',{'id' : cat.id }) }}" class="">voir les produits !!<i class="ti-arrow-right"></i></a>
                            </div>
                        </div>
                    </div>
                    {% else %}
						<h2> Pas de categorie existant </h2
                    {% endfor %}
                    
                </div>
            </div>
        </section>
        <!-- Services Area End -->

{% endblock %}