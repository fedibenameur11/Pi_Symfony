{% extends 'base2.html.twig' %}

{% block title %}AbonnementCoach{% endblock %}

{% block body %}
<div class="col-12">
    <div class="bg-secondary rounded h-100 p-4">
        <h4> Information sur un abonnement coach et son programme</h4>
        <div style="margin:20px 0 20px 0">
            <a href="{{ path('app_abonnement_coach_index') }}">
                    <button type="button" class="btn btn-info m-2">Retour</button>
            </a>
            <div style="float:right">
                <a href="{{ path('app_abonnement_coach_edit', {'id': abonnement_coach.id}) }}">
                    <button type="button" class="btn btn-success m-2">Mettre a jour</button>
                </a>
                
                <form style="display:inline-block;" method="post" action="{{ path('app_abonnement_coach_delete', {'id': abonnement_coach.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ abonnement_coach.id) }}">
                    <button class="btn btn-primary m-2">Delete</button>
                </form>
            </div>
        </div>
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ abonnement_coach.id }}</td>
                </tr>
                <tr>
                    <th>Client</th>
                    <td>{{ abonnement_coach.client.nom }}</td>
                </tr>
                <tr>
                    <th>Coach</th>
                    <td>{{ abonnement_coach.coach.nom }}</td>
                </tr>
                <tr>
                    <th>Duree de l'abonnement par mois</th>
                    <td>{{ abonnement_coach.dureeAbonnement }} mois</td>
                </tr>
                <tr>
                    <th>Duree de l'abonnement par semaine</th>
                    <td>{{ abonnement_coach.programme.NombreSemaines }} semaines</td>
                </tr>
                <tr>
                    <th>Date de debut de l'abonnement</th>
                    <td>{{ abonnement_coach.dureeDebut|date('Y-m-d') }}</td>
                </tr>
                <tr>
                    <th>Date de fin de l'abonnement</th>
                    <td>{{ abonnement_coach.dureeFin|date('Y-m-d') }}</td>
                </tr>
                <tr>
                    <th>Programme</th>
                    <td>
                        <a href="{{ path('app_abonnement_coach_programme_infos', {'id': abonnement_coach.programme.id}) }}">
                            <button type="button" class="btn btn-light m-2">Voir</button>
                        </a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
    
{% endblock %}
