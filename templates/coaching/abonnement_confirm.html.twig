					<div class="col-sm-10">
						{{ form_widget(form.duree_abonnement,
							 {'attr': {'class': 'form-control','min':'1','max':'12', 'placeholder': "__ mois"}}) }}
						<!-- <input type="email" class="form-control" id="inputEmail3"> -->
					</div>
					
					
				</div>
				
				<button type="submit" class="btn btn-primary">Envoyer demande</button>
				{{ form_errors(form) }}
			<!--{{ form_end(form) }} -->
			</form>
