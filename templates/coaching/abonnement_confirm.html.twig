			<!-- {{ form_start(form, {'attr': {'action': '{{ path("app_abonnement_confirm",  ) }}', 'method' : 'post' } }) }} -->
			<form action="{{ path("app_abonnement_confirm" , {'coach': coach.id}) }}" method="post">
				{{ form_widget(form._token) }}
				<div class="row mb-3">
				{{ form_label(form.client, 'Client', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
					<!-- <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label> -->
					<div class="col-sm-10">
						{{ form_widget(form.client, {'attr': {'class': 'form-control','readonly':'', 'value': form.vars.value.client.nom}}) }}
						<!-- <input type="password" class="form-control" id="inputPassword3"> -->
					</div>
					{{ form_errors(form.client) }}
				</div>
				<div class="row mb-3">
					{{ form_label(form.coach, 'Coach', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
					<!--<label for="inputEmail3" class="col-sm-2 col-form-label">Email</label> -->
					<div class="col-sm-10">
						{{ form_widget(form.coach, {'attr': {'class': 'form-control','readonly':'', 'value': form.vars.value.coach.nom}}) }}
						<!-- <input type="email" class="form-control" id="inputEmail3"> -->
					</div>
					{{ form_errors(form.coach) }}
				</div>
				<div class="row mb-3">
					{{ form_label(form.duree_abonnement, 'Dur√©e abonnement (par nombre de mois)' ,
						{'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
